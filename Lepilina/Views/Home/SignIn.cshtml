@model Lepilina.Models.LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SignIn" method="post">
    <div class="form-group">
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sername">Фамилия</label>
        <input asp-for="Sername" class="form-control" />
        <span asp-validation-for="Sername" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Names">Имя</label>
        <input asp-for="Names" class="form-control" />
        <span asp-validation-for="Names" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic">Отчество</label>
        <input asp-for="Patronymic" class="form-control" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Log In</button>
</form>

<div>
    <a asp-action="SignUp">У вас нет учетной записи? Регистрация здесь.</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}