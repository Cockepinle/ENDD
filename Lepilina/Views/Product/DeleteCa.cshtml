@using System.Globalization
@model Lepilina.Models.Category

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h2>Удаление товара</h2>

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div>
    <h4>Детали товара</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">id</dt>
        <dd class="col-sm-10">@Model.category_id</dd>
        <dt class="col-sm-2">Название категории</dt>
        <dd class="col-sm-10">@Model.name_category</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmedCa" method="post">
    <input type="hidden" name="id" value="@Model.category_id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
