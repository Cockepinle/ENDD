@model Lepilina.Models.Users
<form asp-action="CreateUs" method="post">
    <div class="form-group">
        <label asp-for="sername">Фамилия</label>
        <input asp-for="sername" class="form-control" />
        <span asp-validation-for="sername" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="names">Имя</label>
        <input asp-for="names" class="form-control" />
        <span asp-validation-for="names" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="patronymic">Отчество</label>
        <input asp-for="patronymic" class="form-control" />
        <span asp-validation-for="names" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Логин</label>
        <input type="text" name="logins" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Должность</label><br />
        @foreach (var position in ViewBag.Positions)
        {
            <div>
                <input type="radio" name="position_id" value="@position.position_id" id="@position.position_id" />
                <label for="@position.position_id">@position.position</label>
            </div>
        }
        <span asp-validation-for="position_id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
</form>